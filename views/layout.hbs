<!doctype html>
<html class="no-js" lang="en" ng-app="carPoolingApp">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Carpooling - </title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" sizes="16x16 24x24 32x32 48x48 64x64" href="assets/icons/favicon.ico">
        <link rel="stylesheet" href="/components/bootstrap/dist/css/bootstrap.css">
        <link rel="stylesheet" href="/assets/css/app.css">
        
        <!-- Vendor scripts -->
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBq4wvYrPm-S8TznZmBvUzHo9o61c9hV0o&libraries=places"></script>
        <script src="/components/angular/angular.js"></script>
        <script src="/components/angular-ui-router/release/angular-ui-router.min.js"></script>
        <script src="/components/jquery/dist/jquery.min.js"></script>
        <script src="/components/angularjs-geolocation/dist/angularjs-geolocation.min.js"></script>
        <script src="/components/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>
        
        
        <!-- Front end app scripts -->
          <script src="/app/app.js"></script>
          <script src="/app/services/gservice.js"></script>
          <script src="/app/services/mapservice.js"></script>
          <script src="/app/controllers/headerCtrl.js"></script>
          <script src="/app/controllers/eventsCtrl.js"></script>
          <script src="/app/controllers/settingsCtrl.js"></script>
    </head>
    <body>
    
        <header ng-controller="headerCtrl" >
          <div class="container">
            <div class="row">
              <div class="col-xs-2 logo">
                <img src="/assets/img/logo.svg" style="float:left; margin-right:10px" />
                <h1><a ui-sref="home">Carpooling</a></h1>
                <span><strong>nearsoft</strong> labs</span>
              </div>
              <div class="col-xs-8 menu">
                <ul>
                  <li><a ui-sref="myroutes" >My routes</a></li>
                  <li><a ui-sref="getaride">Get a ride</a></li>
                  <li><a ui-sref="events" >Events</a></li>
                  <li><a ui-sref="settings" >Settings</a></li>
                </ul>
              </div>
              <div class="col-xs-2 user">
                <p><span ng-bind="firstName + ' ' +lastName"></span></p>
                <p><a href="#">Logout</a></p>
              </div>
            </div>
            </div>
        </header>
            
      
        <section id="content">
          <div id="notify" class="container" >
            <p class="alert alert-danger text-center" role="alert" ng-show="apiError">
                <b>API Error : </b>
                <span>{{ apiStatus }}</span>
            </p>
            <div class="alert alert-success text-center fade-out" role="alert" ng-show="apiSuccess">
                <p>Event saved! </p>
            </div>
              
          </div>
          
          <div ui-view></div>
        </section>

  </body>
</html>
