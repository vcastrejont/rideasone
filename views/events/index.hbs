<div class="container box" >
<h3>Events</h3>
<div class="row">
  <div class="container-fluid" id="events">

    <div class="row">
      <aside class="col-sm-2" >
        <h4>Filters</h4>
        <form class="form" action="index.html" method="post">
          <label for="">Departure time</label>
          <select class="form-control" name="">
            <option>7:00 am</option>
          </select>  
          <label for="">Departure location</label>
          <select class="form-control" name="">
          </select>  
          <label for="">Driver</label>
          <input type="text" class="form-control" placeholder="Type a name" >
        </form>
      </aside>
      
      <div class="col-sm-10 list" >
        <div class="text-right" >
          <a href="/events/new" class="btn btn-success  ">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new event
          </a>
        </div>
        
        {{#each locations}}
        <div class="event">
          <div class="date">
            <span class="d">05</span>
            <span class="m">April</span>
          
          </div>
          <div class="row">
            <div class="col-sm-4">
              <p class="title">
                <a href="/events/show/{{_id}}">{{#events}}{{name}}{{/events}}</a> 
              </p>
              <p style="line-height:30px">9:00 pm</p>
              <p>Attendee: 50 Available seats: 15 </p>
            </div>
            <div class="col-sm-8 text-right">
              
              <p><a href="{{url}}"> {{name}}</a></p>
              <p>{{address}}</p>
            </div>
          </div>
        </div>
        {{/each }}
        
      </div>
    </div>
  </div>
</div>
